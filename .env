# 로깅 설정
LOG_LEVEL=info
NODE_ENV=development

# PostgreSQL 연결 설정
POSTGRES_HOST=10.101.99.105
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=telemetry
POSTGRES_MAX_CONNECTIONS=20

# Kafka 설정
KAFKA_BROKERS=10.101.91.181:9092,10.101.91.181:9093
KAFKA_GROUP_ID=apm-telemetry-group
KAFKA_TRACE_TOPIC=onpremise.theshop.oltp.dev.trace
KAFKA_LOG_TOPIC=onpremise.theshop.oltp.dev.log
KAFKA_CLIENT_ID=apm-client-local

# 배치 처리 설정
BATCH_SIZE=100
FLUSH_INTERVAL=5000

# 데이터 보존 설정
DATA_RETENTION_ENABLED=false
DATA_RETENTION_CLEANUP_INTERVAL=60
DATA_RETENTION_PERIOD=30

# API 서버 설정
API_PORT=8080
API_HOST=0.0.0.0
API_ALLOWED_ORIGINS=*
API_ALLOW_CREDENTIALS=true
API_READ_TIMEOUT=10
API_WRITE_TIMEOUT=30
API_ENABLE_SWAGGER=true

# Redis
REDIS_ENABLE_CACHE=true
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_TTL=3600