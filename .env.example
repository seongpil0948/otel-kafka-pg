# 데이터베이스 설정
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=telemetry
POSTGRES_MAX_CONNECTIONS=20

# Kafka 설정
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=telemetry-processor-group
KAFKA_CLIENT_ID=telemetry-processor
KAFKA_TRACE_TOPIC=otlp.traces
KAFKA_LOG_TOPIC=otlp.logs
BATCH_SIZE=100
FLUSH_INTERVAL=5000

# 로깅 설정
LOG_LEVEL=info
NODE_ENV=development

# 데이터 보존 설정
DATA_RETENTION_ENABLED=true
DATA_RETENTION_CLEANUP_INTERVAL=60
DATA_RETENTION_PERIOD=30

# API 서버 설정
API_PORT=8080
API_HOST=
API_ALLOWED_ORIGINS=*
API_ALLOW_CREDENTIALS=true
API_READ_TIMEOUT=10
API_WRITE_TIMEOUT=30
API_ENABLE_SWAGGER=true

# MCP 서버 설정
MCP_PORT=8090
MCP_LOG_ENABLED=true

# 외부 서비스 API 토큰
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_URL=https://gitlab.example.com
NOTION_TOKEN=your_notion_token_here
FIGMA_TOKEN=your_figma_token_here

# MCP 도구 설정
# MCP_ENABLED_TOOLS=gitlab_code_recommend,gitlab_search_repositories,notion_search_pages,figma_get_file,telemetry_query_logs
